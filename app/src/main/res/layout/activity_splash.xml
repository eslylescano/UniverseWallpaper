<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleprogress="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.esly.universeimages.views.SplashActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:layout_marginTop="89dp"
        android:src="@drawable/icono_app" />

    <com.esly.universeimages.circleprogress.CircleProgress
        android:id="@+id/progress"
        circleprogress:color1="#0277bd"
        circleprogress:color2="#1a237e"
        circleprogress:color3="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_below="@+id/progress"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"

        android:textColor="#e8e8e8"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>
    


</RelativeLayout>
